<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalms3.ThreatCommunicationsDashboard">
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Security Manager - Threat Communications">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="700.0" layoutY="20.0" mnemonicParsing="false" text="Back" onAction="#onBackClick" />
      
      <!-- Basic threat communications interface -->
      <Label layoutX="20.0" layoutY="80.0" text="Threat Level:" />
      <Label layoutX="20.0" layoutY="120.0" text="Current Threats:" />
      <Label layoutX="20.0" layoutY="160.0" text="Communication Status:" />
      
      <Button fx:id="sendAlertButton" layoutX="20.0" layoutY="200.0" mnemonicParsing="false" text="Send Alert" onAction="#onSendAlertClick" />
      <Button fx:id="updateThreatLevelButton" layoutX="20.0" layoutY="240.0" mnemonicParsing="false" text="Update Threat Level" onAction="#onUpdateThreatLevelClick" />
      <Button fx:id="broadcastMessageButton" layoutX="20.0" layoutY="280.0" mnemonicParsing="false" text="Broadcast Message" onAction="#onBroadcastMessageClick" />
   </children>
</AnchorPane>
