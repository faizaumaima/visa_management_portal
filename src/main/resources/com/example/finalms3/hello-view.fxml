<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="40.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalms3.HelloController">
  <padding>
    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
  </padding>

  <Label text="E-Visa Management Portal" style="-fx-text-fill: #2c3e50;">
    <font>
      <Font size="36.0" />
    </font>
  </Label>
  
  <Label text="Welcome to the E-Visa Management System" style="-fx-text-fill: #7f8c8d;">
    <font>
      <Font size="18.0" />
    </font>
  </Label>
  
  <Label text="Please select your role to continue:" style="-fx-text-fill: #34495e;">
    <font>
      <Font size="16.0" />
    </font>
  </Label>

  <HBox spacing="40.0" alignment="CENTER">
    <Button text="Client Access" onAction="#onClientButtonClick" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15 30;">
      <font>
        <Font size="16.0" />
      </font>
    </Button>
    <Button text="Security Manager" onAction="#onSecurityManagerButtonClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15 30;">
      <font>
        <Font size="16.0" />
      </font>
    </Button>
  </HBox>
  
  <Label fx:id="welcomeText" style="-fx-text-fill: #27ae60; -fx-font-size: 14px;"/>
</VBox>
