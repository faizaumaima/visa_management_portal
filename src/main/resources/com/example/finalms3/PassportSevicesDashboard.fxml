         <children>
            <Button fx:id="uploadDocumentsButton" layoutX="130.0" layoutY="21.0" mnemonicParsing="false" text="Upload Documents" onAction="#onUploadDocumentsClick" />
            <Button fx:id="scheduleAppointmentButton" layoutX="84.0" layoutY="107.0" mnemonicParsing="false" text="Schedule Appointment for Biometric" onAction="#onScheduleAppointmentClick" />
            <Button fx:id="verifyButton" layoutX="305.0" layoutY="220.0" mnemonicParsing="false" text="Verify" onAction="#onVerifyClick" />
         </children>
      </AnchorPane>
      
