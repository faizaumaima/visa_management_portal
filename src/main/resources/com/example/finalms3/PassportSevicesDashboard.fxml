            <TableColumn fx:id="nameColumn" prefWidth="100.0" text="Name" />
            <TableColumn fx:id="emailColumn" prefWidth="120.0" text="Email" />
            <TableColumn fx:id="documentTypeColumn" prefWidth="100.0" text="Document Type" />
            <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
            <TableColumn fx:id="applicationDateColumn" prefWidth="100.0" text="Application Date" />
         </columns>
      </TableView>
      <TextField fx:id="searchTextField" layoutX="297.0" layoutY="80.0" prefWidth="200.0" promptText="Search applications..." />
      <ComboBox fx:id="statusFilterComboBox" layoutX="520.0" layoutY="80.0" prefWidth="150.0" promptText="Filter by status" />
      <ComboBox fx:id="serviceTypeFilterComboBox" layoutX="680.0" layoutY="80.0" prefWidth="150.0" promptText="Filter by service type" />
      <Button fx:id="processApplicationButton" layoutX="26.0" layoutY="500.0" mnemonicParsing="false" text="Process Application" onAction="#onProcessApplicationClick" />
      <Button fx:id="issuePassportButton" layoutX="26.0" layoutY="530.0" mnemonicParsing="false" text="Issue Passport" onAction="#onIssuePassportClick" />
