      <Button fx:id="renewExistingPassportButton" layoutX="26.0" layoutY="268.0" mnemonicParsing="false" text="Renew Existing Passport" onAction="#onRenewExistingPassportClick">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="paymentButton" layoutX="26.0" layoutY="372.0" mnemonicParsing="false" text="Payment" onAction="#onPaymentClick">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="passportStatusButton" layoutX="26.0" layoutY="457.0" mnemonicParsing="false" text="Passport Status" onAction="#onPassportStatusClick">
