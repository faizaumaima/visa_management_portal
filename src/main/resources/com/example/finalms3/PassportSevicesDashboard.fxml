      <TextArea fx:id="applicationDetailsTextArea" layoutX="297.0" layoutY="80.0" prefHeight="100.0" prefWidth="378.0" promptText="Application details will appear here..." />
      <Label fx:id="totalPassportApplicationsLabel" layoutX="26.0" layoutY="590.0" text="Total Applications: 0" />
      <Label fx:id="processedApplicationsLabel" layoutX="26.0" layoutY="610.0" text="Processed Applications: 0" />
   </children>
