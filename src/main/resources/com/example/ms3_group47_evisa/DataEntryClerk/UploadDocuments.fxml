<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      spacing="15"
      prefWidth="500"
      prefHeight="400"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Upload Application Documents" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="applicationIdField" promptText="Enter Application ID" prefWidth="300"/>

    <Button text="Upload Passport Scan" fx:id="uploadPassportButton" prefWidth="200"/>
    <Button text="Upload Photo" fx:id="uploadPhotoButton" prefWidth="200"/>
    <Button text="Upload Other Documents" fx:id="uploadOtherDocsButton" prefWidth="200"/>

    <Button text="Submit Documents" fx:id="submitDocumentsButton" prefWidth="200"/>

    <Label fx:id="statusLabel" textFill="green"/>
</VBox>

