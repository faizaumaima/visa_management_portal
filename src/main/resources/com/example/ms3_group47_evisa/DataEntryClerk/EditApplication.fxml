<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER"
      spacing="15"
      prefWidth="600"
      prefHeight="500"
      style="-fx-background-color: #f4f4f4;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Edit Application Information" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Enter Application ID or Passport Number" prefWidth="350"/>
        <Button text="Search" fx:id="searchButton" prefWidth="100"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Full Name" prefWidth="250"/>
        <TextField fx:id="passportField" promptText="Passport Number" prefWidth="250"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="dobField" promptText="Date of Birth (YYYY-MM-DD)" prefWidth="250"/>
        <TextField fx:id="otherField" promptText="Other Info" prefWidth="250"/>
    </HBox>

    <Button text="Update Application" fx:id="updateButton" prefWidth="200"/>
    <Label fx:id="statusLabel" textFill="green"/>

</VBox>

