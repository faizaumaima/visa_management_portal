   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Respond To Ticket">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Ticket ID:" />
            <Label text="Customer Name:" GridPane.rowIndex="1" />
            <Label text="Issue Description:" GridPane.rowIndex="2" />
            <TextField fx:id="ticketIdField" GridPane.columnIndex="1" />
            <TextField fx:id="customerNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
